
bool push_btn(bool isRelease, usi8 pin){
//! isRelease == 0 --> push button is hold
//! isRelease == 1 --> push button is release
   if(!input(pin)){
      delay_ms(20);
      if(!input(pin)){
         if(isRelease) while(!input(pin));
         return true;   
      }
      return false;
   }
   return false;
}

bool tick_btn(usi16 dl, usi8 pin){
   if(!input(pin)){
      dl_count += 1; delay_us(25);
      if(dl_count >= dl){
         dl_count = 0;
         return true;
      }
      return false;
   }
   return false;
}
